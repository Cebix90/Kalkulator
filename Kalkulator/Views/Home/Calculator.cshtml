@model Kalkulator.Models.Calculator

@{
    ViewData["Title"] = "Kalkulator";
}

<h1>Kalkulator</h1>
<p>Wybierz dwie liczby i jeden ze znakow: +, -, *, /</p>

<form action="Calculator">
    <p><input type="firstNumber" asp-for="FirstNumber"/> First number</p>
    <p><input type="secondNumber" asp-for="SecondNumber"/> Second number</p>
    <p><input type="mark" asp-for="Mark"/> Mark</p>
    <input type="submit"/>
</form>

